<!-- app/views/comments/_form.html.erb -->
<div class="bg-white p-6 rounded-lg shadow-xl border-t-4 border-green-500 mt-8">
  <h2 class="text-2xl font-bold text-gray-900 mb-5">Leave Your Comment:</h2>

  <%= form_with(model: [post, comment], local: true, class: "space-y-5") do |form| %>
    <% if comment.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
        <h2 class="font-bold mb-2"><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
        <ul class="list-disc ml-5">
          <% comment.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :commenter, "Your Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :commenter, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 text-base", placeholder: "Enter your name" %>
    </div>

    <div class="mb-6">
      <%= form.label :body, "Your Comment", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :body, rows: 5, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 text-base", placeholder: "Type your comment here..." %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Add Comment", class: "bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg cursor-pointer transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50" %>
    </div>
  <% end %>
</div>
