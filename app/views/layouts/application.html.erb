<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Wow Blog App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        font-family: 'Inter', sans-serif;
      }
    </style>
  </head>

  <body class="bg-gray-100 flex flex-col min-h-screen">
    <header class="bg-white shadow-md p-4">
      <div class="container mx-auto flex justify-between items-center">
        <!-- Blog Title/Logo -->
        <%= link_to "Wow Blog App", root_path, class: "text-3xl font-bold text-gray-800 hover:text-blue-600 transition duration-300" %>

        <!-- Navigation Links -->
        <nav>
          <ul class="flex space-x-6">
            <li><%= link_to "Home", root_path, class: "text-gray-700 hover:text-blue-600 text-lg font-medium transition duration-300" %></li>
            <li><%= link_to "Posts", posts_path, class: "text-gray-700 hover:text-blue-600 text-lg font-medium transition duration-300" %></li>
            <li><%= link_to "New Post", new_post_path, class: "text-white bg-blue-500 hover:bg-blue-600 px-4 py-2 rounded-lg shadow-md transition duration-300" %></li>
          </ul>
        </nav>
      </div>
    </header>

    <main class="container mx-auto p-8 flex-grow">
      <!-- Flash messages (e.g., success, error messages) -->
      <% if notice %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
          <%= notice %>
        </div>
      <% end %>
      <% if alert %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
          <%= alert %>
        </div>
      <% end %>

      <%= yield %>
    </main>

    <footer class="bg-gray-800 text-white p-6 mt-8">
      <div class="container mx-auto text-center">
        <p>&copy; <%= Time.now.year %> Wow Blog App. All rights reserved.</p>
        <p class="text-sm mt-2">Built with Rails and Tailwind CSS.</p>
      </div>
    </footer>
  </body>
</html>
