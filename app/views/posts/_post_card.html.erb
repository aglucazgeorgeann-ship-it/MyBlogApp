<!-- app/views/posts/_post_card.html.erb -->
<div id="<%= dom_id post %>" class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden flex flex-col">
  <div class="p-6 flex-grow">
    <h2 class="text-2xl font-bold text-gray-900 mb-3"><%= post.title %></h2>
    <p class="text-gray-700 leading-relaxed mb-4 line-clamp-3"><%= post.content %></p>
    <div class="text-sm text-gray-500">
      Posted <%= time_ago_in_words(post.created_at) %> ago
    </div>
  </div>
  <div class="bg-gray-50 p-6 border-t border-gray-200 flex justify-end space-x-3">
    <%= link_to "Show this Post", post, class: "text-blue-600 hover:text-blue-800 font-medium transition duration-300" %>
    <%= link_to "Edit this Post", edit_post_path(post), class: "text-yellow-600 hover:text-yellow-800 font-medium transition duration-300" %>
    <%= button_to "Delete this Post", post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "text-red-600 hover:text-red-800 font-medium transition duration-300" %>
  </div>
</div>
