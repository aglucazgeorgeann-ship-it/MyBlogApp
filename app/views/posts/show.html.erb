<!-- app/views/posts/show.html.erb -->
<div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-xl">
  <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @post.title %></h1>
  <p class="text-gray-700 text-lg leading-relaxed mb-8"><%= @post.content %></p>

  <div class="flex items-center space-x-4 mb-8 text-gray-600">
    <span class="text-sm">Posted <%= time_ago_in_words(@post.created_at) %> ago</span>
    <span class="text-sm">Last updated <%= time_ago_in_words(@post.updated_at) %> ago</span>
  </div>

  <div class="flex justify-end space-x-4 mb-10 border-t border-b border-gray-200 py-5">
    <%= link_to "Edit this Post", edit_post_path(@post), class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-5 rounded-lg shadow-md transition duration-300" %>
    <%= link_to "Back to Posts", posts_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-5 rounded-lg shadow-md transition duration-300" %>
    <%= button_to "Delete this Post", @post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-5 rounded-lg shadow-md transition duration-300" %>
  </div>

  <!-- Comments Section -->
  <div class="mt-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-6">Comments</h2>

    <div id="comments" class="mb-8 space-y-6">
      <% if @post.comments.any? %>
        <% @post.comments.each do |comment| %>
          <%= render "comments/comment", comment: comment %>
        <% end %>
      <% else %>
        <p class="text-gray-600 italic">No comments yet. Be the first to comment!</p>
      <% end %>
    </div>

    <!-- New Comment Form -->
    <h3 class="text-2xl font-bold text-gray-800 mb-4">Add a Comment</h3>
    <%= render "comments/form", post: @post, comment: @comment %>
  </div>
</div>
