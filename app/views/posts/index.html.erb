<!-- app/views/posts/index.html.erb -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold text-gray-900">All Blog Posts</h1>
    <%= link_to "New Post", new_post_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg shadow-md transition duration-300" %>
  </div>

  <div id="posts" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @posts.each do |post| %>
      <%= render "posts/post_card", post: post %>
    <% end %>
  </div>
</div>
